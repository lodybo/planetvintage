<div class="act">
  <img class="bandpic top no-border img-responsive visible-xs visible-sm" src="<%- image %>" />
  <div class="container">
    <div class="row">
      <div class="bandname col-xs-12">
        <div class="hero">
          <h1><%- name %></h1>
        </div>
      </div>
    </div>

    <div class="bandpic col-xs-12 col-md-7 col-lg-6 col-md-push-5 col-lg-push-6 hidden-xs hidden-sm">
      <% if (youtube.length > 0) { %>
        <img class="img-responsive" src="<%- image %>" />
      <% } %>
    </div>

    <% if (youtube.length > 0) { %>
      <div class="bio col-xs-12 col-md-5 col-lg-6 col-md-pull-7 col-lg-pull-6">
    <% } else { %>
      <div class="bio col-xs-12 col-md-12 col-lg-12">
    <% } %>
      <p><%- bio %></p>
    </div>

    <div class="media col-xs-12">
      <% if (youtube.length > 0) { %>
        <style>.embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; } .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }</style>
        <div class='embed-container'><iframe src='<%- youtube %>' frameborder='0' allowfullscreen></iframe></div>
      <% } else { %>
        <img class="img-responsive hidden-xs hidden-sm" src="<%- image %>" />
      <% } %>
    </div>
  </div>
</div>